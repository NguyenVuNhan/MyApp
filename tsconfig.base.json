{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/api/nest/modules": ["libs/api/nest/modules/src/index.ts"],
      "@app/api/nest/utils": ["libs/api/nest/utils/src/index.ts"],
      "@app/api/shared/constances": ["libs/api/shared/constances/src/index.ts"],
      "@app/api/shared/type-orm": ["libs/api/shared/type-orm/src/index.ts"],
      "@app/api/shared/utils": ["libs/api/shared/utils/src/index.ts"],
      "@app/authentication/module": ["libs/authentication/module/src/index.ts"],
      "@app/authentication/shared": ["libs/authentication/shared/src/index.ts"],
      "@app/user/module": ["libs/user/module/src/index.ts"],
      "@app/user/shared": ["libs/user/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
